#include <stdio.h>

int main() {
    int a;
    int b;
    int c;
    printf("give me a value of a");
    scanf("%d", &a);
    printf("give me a value of b");
    scanf("%d", &b);
    printf("give me a value of c");
    scanf("%d", &c);
    if (a>b && b>c){
    printf("the smallest number is c %d\n", c);
    }
    else if (b>c && c>a) {
             printf("the smallest number is a %d\n", a);
    }
    else if (a>c && c>b) {
             printf("the smallest number is b %d\n", b);}
    return 0;
    }

